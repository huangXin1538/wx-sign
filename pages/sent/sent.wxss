/* pages/sent/sent.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.filter-bar {
  display: flex;
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}

.filter-item.active {
  color: #07c160;
  font-weight: 500;
}

.filter-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.contract-list {
  padding: 0 30rpx;
}

.contract-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.contract-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.contract-status {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

.contract-status.pending {
  color: #fa8c16;
  background: #fff7e6;
}

.contract-status.signed {
  color: #52c41a;
  background: #f6ffed;
}

.contract-status.rejected {
  color: #f5222d;
  background: #fff1f0;
}

.contract-info {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.info-row .label {
  color: #999;
  width: 140rpx;
}

.info-row .value {
  color: #666;
  flex: 1;
}

.contract-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  margin: 0;
  padding: 0 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  border-radius: 32rpx;
}

.action-btn.view {
  background: #e6f7ff;
  color: #1890ff;
}

.action-btn.share {
  background: #f6ffed;
  color: #52c41a;
}

.action-btn.download {
  background: #fff7e6;
  color: #fa8c16;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.float-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}
