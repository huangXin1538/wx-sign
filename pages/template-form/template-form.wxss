.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 120rpx;
}

.form-group {
  background: #fff;
  padding: 0 20rpx;
}

.form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.textarea {
  width: 100%;
  height: 160rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.upload-box {
  width: 160rpx;
  height: 160rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-box {
  width: 100%;
  height: 320rpx;
}

.preview {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
}

.upload-placeholder text {
  font-size: 24rpx;
  color: #999;
}

.content-box {
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 20rpx;
}

.section-list {
  margin-bottom: 20rpx;
}

.section-item {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.section-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7f7f7;
  border-radius: 8rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

.action-btn.delete {
  background: #fff2f0;
}

.section-content {
  width: 100%;
  height: 200rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.add-section-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.form-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.05);
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
}
