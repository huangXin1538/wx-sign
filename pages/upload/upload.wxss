.container {
  padding: 20px;
}

.upload-section {
  margin-bottom: 30px;
}

.upload-btn {
  background-color: #1aad19;
  color: white;
  margin-bottom: 15px;
}

.file-info {
  background: #f8f8f8;
  padding: 10px;
  border-radius: 4px;
}

.file-name {
  display: block;
  color: #666;
  margin-top: 5px;
  word-break: break-all;
}

.form-section {
  background: white;
  padding: 15px;
  border-radius: 8px;
}

.form-item {
  margin-bottom: 20px;
}

.label {
  display: block;
  margin-bottom: 8px;
  color: #333;
}

input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  box-sizing: border-box;
}

.submit-btn {
  background-color: #1aad19;
  color: white;
  margin-top: 20px;
}

.submit-btn[disabled] {
  background-color: #ccc;
}
