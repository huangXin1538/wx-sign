/* pages/contracts/contracts.wxss */

.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 40rpx;
}

.header {
  padding: 30rpx 40rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}

.recent-section {
  background: #fff;
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #666;
}

.contract-list {
  min-height: 200rpx;
}

.contract-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.contract-item:last-child {
  border-bottom: none;
}

.contract-info {
  flex: 1;
  margin-right: 20rpx;
}

.contract-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.contract-party {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.contract-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.contract-status {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

.contract-status.pending {
  color: #faad14;
  background: #fffbe6;
}

.contract-status.signed {
  color: #52c41a;
  background: #f6ffed;
}

.contract-status.rejected {
  color: #ff4d4f;
  background: #fff2f0;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
}

.tab-header {
  display: flex;
  background: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 1;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.contract-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  margin: 0;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  min-width: 140rpx;
}

.action-btn.view {
  background: #f2f2f2;
  color: #666;
}

.action-btn.share {
  background: #07c160;
  color: #fff;
}

.action-btn.sign {
  background: #07c160;
  color: #fff;
}

.action-btn.download {
  background: #576b95;
  color: #fff;
}

.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx;
  padding: 20rpx;
  background-color: #07c160;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  cursor: pointer;
}

.upload-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
}

.template-list {
  background: #fff;
  margin-bottom: 20rpx;
}

.template-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}

.template-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.template-info {
  flex: 1;
}

.template-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.template-desc {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.template-arrow {
  color: #999;
  font-size: 32rpx;
  margin-left: 20rpx;
}

.history-section {
  background: #fff;
  margin-top: 20rpx;
}

.section-header {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}